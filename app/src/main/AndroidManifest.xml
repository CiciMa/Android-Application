<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xiaoxinma.happytrails">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RemoveActivity"
            android:label="@string/title_activity_remove"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayAlpha"
            android:label="@string/title_activity_display_alpha"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayRate"
            android:label="@string/title_activity_display_rate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayState"
            android:label="@string/title_activity_display_state"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayLandmark"
            android:label="@string/title_activity_display_landmark"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayNotHiked"
            android:label="@string/title_activity_display_not_hiked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayProximal"
            android:label="@string/title_activity_display_proximal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>